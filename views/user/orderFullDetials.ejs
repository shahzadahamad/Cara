            <h4 style="border-bottom: 1px solid black; text-align: center;">Your Bill</h4>
            <br><br>
            <table>
              <thead>
                <tr>
                  <th data-label="Product">Product</th>
                  <th data-label="Total">Price</th>
                </tr>
              </thead>
              <tbody>
                <% if(locals.order){ %>
                    <tr>
                      <td data-label="Product">
                        <% for(let i=0;i<order[0].orderItems.length;i++){ %>
                       <p><%= order[0].orderItems[i].productId.name %><span style="font-weight: 500;"> - </span><span style="font-weight: 800; color: #000;"
                        style="font-weight: 500;">
                        <%= order[0].orderItems[i].quantity%>
