<section id="prodetails" class="section-p1">
  <div class="single-pro-image">
    <img src="images/productImages/<%= sproduct.image[0] %>" width="100%" id="MainImg" alt="">
    <div class="small-img-group">
    <%  for(let i=0; i< sproduct.image.length; i++) { %>
      <div class="small-img-col">
        <img src="images/productImages/<%= sproduct.image[i] %>" width="100%" class="small-img" alt="">
      </div>
      <% } %>
    </div>
  </div>

  <div class="single-pro-details">
    <h6>Brand: <%= sproduct.brand.charAt(0).toUpperCase() + sproduct.brand.slice(1) %></h6>
    <h4 style="padding: 32px 0 20px 0;"><%= sproduct.name %></h4>
    <h2>$<%= sproduct.price %></h2>
    <select>
      <option>Select Size</option>
      <option>XL</option>
      <option>XXL</option>
      <option>Small</option>
      <option>Large</option>
    </select>
    <div style="margin-bottom: 10px;" class="star">
      <% for(let j=0;j< sproduct.rating; j++){ %>
        <i style="color: rgb(243, 181, 25); font-size: 15px;" class="ri-star-fill"></i>
        <% } %>
    </div>
    <input type="number" value="1">
    <button class="normal" type="submit" onclick="addToCart('<%= sproduct._id %>','<%= locals.login %>')">Add To Cart</button>
    <h4>Product Details</h4>
    <span><%= sproduct.description %></span>
  </div>
</section>

<section id="product1" class="section-p1">
  <h2>Related Products</h2>
  <p>Summer Collection New Morden Design</p>
  <div class="pro-container">
    <% if(related.length>0){%>
      <% for(let i=0;i< related.length ;i++){ %>

        <div class="pro" onclick="window.location.href='/sproduct?id=<%= related[i]._id %>'">
          <img src="images/productImages/<%= related[i].image[0] %>" alt="">
          <div class="des">
            <span>
              <%= related[i].brand %>
            </span>
            <h5>
              <%= related[i].name %>
            </h5>
            <div class="star">
              <% for(let j=0;j< related[i].rating; j++){ %>
                <i class="ri-star-fill"></i>
                <% } %>
            </div>
            <h4>
              $<%= related[i].price %>
            </h4>
          </div>
          <a onclick="addToCart('<%= related[i]._id %>','<%= locals.login %>')"><i class="ri-shopping-cart-2-line cart"></i></a>
        </div>
        <% } %>
          <% } else { %>
            <h2>Products Not Found</h2>
            <% } %>
  </div>
</section>

