<%- include('../layouts/header.ejs') -%>



  <style>
    #crusor {
      cursor: pointer;
    }

    .style {
      font-size: 14px;
      font-weight: 600;
      padding: 15px 30px;
      color: #fff;
      border-radius: 4px;
      cursor: pointer;
      border: none;
      outline: none;
      transition: 0.2s;
      background-color: #088178;
    }

    .modal {
      display: none;
      position: fixed;
      z-index: 1;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgba(0, 0, 0, 0.4);
    }

    .modal-content {
      background-color: #fefefe;
      margin: 15% auto;
      padding: 20px;
      border: 1px solid #888;
      width: 50%;
      max-height: 80%;
      overflow-y: auto;
      position: fixed;
      left: 345px;
      top: -16%;
    }

    .close {
      color: #aaaaaa;
      float: right;
      font-size: 28px;
      font-weight: bold;
    }

    .close:hover,
    .close:focus {
      color: #000;
      text-decoration: none;
      cursor: pointer;
    }

    .coupon-container {
      margin-bottom: 20px;
    }

    .coupon {
      background-color: #f9f9f9;
      border: 1px solid #ccc;
      padding: 10px;
      margin-bottom: 5px;
    }
  </style>

  <header id="header">
    <a href="#"><img src="/images/logo.png" class="logo" alt=""></a>

    <div>
      <ul id="navbar">
        <li><a href="/home">Home</a></li>
        <li><a href="/shop">Shop</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="<%= locals.login ? '/profile' : '/login' %>">
            <%= locals.login ? 'Profile' : 'Login' %>
          </a></li>
        <li id="lg-bag"><a href="/wishlist"><i style="font-size: 20px;" class="fa-solid fa-heart"></i></a></li>
        <li id="lg-bag"><a class="active" href="/cart"><i class="fa-solid fa-bag-shopping nav-cart"></i></a></li>
        <a href="#" id="close"><i class="fa-solid fa-xmark"></i></a>
      </ul>
    </div>
    <div id="mobile">
      <a href="/cart"><i class="fa-solid fa-bag-shopping"></i></a>
      <i id="bar" class="fas fa-outdent"></i>
    </div>
  </header>

  <section id="page-header" class="about-header">
    <h2>#Cart</h2>
    <p>Add your coupon code & SAVE upto 70%!</p>
  </section>

  <% if( locals.message ){ %>
    <div style="color: red; font-weight: 700; text-align: center;" class="detials" id="hide">
      <%=message%>
    </div>
    <% } %>

      <section id="cart" class="section-p1">

        <table width="100%">
          <thead>
            <% if(locals.product){%>
              <tr>
                <td>Remove</td>
                <td>Image</td>
                <td>Product Name</td>
                <td>Price</td>
                <td>Quatity</td>
                <td>Subtotal</td>
              </tr>
          </thead>
          <tbody>
            <% if(product.length>0){%>
              <% for(let i=0;i< product.length ; i++) { %>
                <tr id="row<%= i %>">
                  <td><a onclick="removeProduct('<%= product[i]._id %>','<%= i %>')"><i
                        class="far fa-times-circle"></i></a>
                  </td>
                  <td><img src="images/productImages/<%= product[i].productId.image[0] %>"
                      onclick="window.location.href='/sproduct?id=<%= product[i].productId._id %>'" alt=""></td>
                  <td>


                    <%= product[i].productId.name %>
                      <% if(product[i].productId.quantity<1){ %>
                        <p style="color: red; font-weight: 700;" id="pTag<%= i %>">Out Of Stock</p>
                        <% }else{ %>
                          <p style="color: red; font-weight: 700;" id="pTag<%= i %>"></p>
                          <% } %>




                  </td>
                  <td>₹<%= product[i].productId.price %>
                  </td>
                  <td>
                    <% if(product[i].productId.quantity>0){ %>
                      <input type="number" id="inputTag<%= i %>"
                        oninput="countOfQuantity('<%= product[i].productId._id %>','<%= product[i].productId.price %>','<%= i %>','<%= product[i].productId.quantity %>')"
                        value="<%= product[i].quantity > product[i].productId.quantity ? product[i].productId.quantity : product[i].quantity ? product[i].quantity : product[i].quantity+1 %>"
                        onkeydown="return false" min="1">
                      <% } %>
                  </td>
                  <% if(product[i].productId.quantity>0){ %>
                    <% if(product[i].quantity){ %>
                      <td id="subTotal<%=i%>">₹<%= product[i].productId.price * product[i].quantity %>
                      </td>
                      <% }else{ %>
                        <td id="subTotal<%=i%>">₹<%= product[i].productId.price * 1 %>
                        </td>
                        <% } %>
                          <% } %>
                </tr>
                <% } %>
                  <% } else { %>
                    <tr>
                      <td onclick="window.location.href='/shop'" id="foot" colspan="7">Add Products To Cart</td>
                    </tr>
                    <% } %>
          </tbody>
          <% } else { %>
            <td id="crusor" onclick="window.location.href='/shop'" id="foot" colspan="7">Add Products To Cart</td>
            <% } %>
        </table>
      </section>


      <div id="couponModal" class="modal">
        <div class="modal-content">
          <span class="close">&times;</span>
          <% if(locals.coupons && locals.coupons.length>0){ %>
            <h4>Coupons Available</h4>
            <br>
            <% for(let i=0;i<coupons.length;i++){ %>
              <% if(coupons[i].discountAmount<=(total < 500 ? total + 40 : total) && coupons[i].quantity>0){ %>
                <div class="coupon-container">
                  <div class="coupon">
                    <p style="font-weight: 700; color: #000;">Coupon Code : <span
                        style="font-weight: 900; color: #088178;" id="textToCopy<%= i %>">
                        <%= coupons[i].couponCode %>
                      </span></p>
                    <p style="font-weight: 700; color: #000;">Detials : <%= coupons[i].description %>
                    </p>
                  </div>
                  <button class="style" onclick="myFunction('<%= i %>')">Copy Code</button>
                </div>
                <% } %>
                  <% } %>
                    <% }else{ %>
                      <h5>No Coupon Available</h5>
                      <% } %>
        </div>
      </div>

      <% if(locals.product){%>
        <form action="/verify-cart-checkout" method="post">
          <section id="cart-add" class="section-p1">
            <div id="coupon">
              <h3>Apply Coupon</h3>
              <p style="display: none; font-weight: 800; font-size: 12px; color: red; margin: 0px; text-align: start; "
                id="errorMsg"></p>
              <div>
                <form>
                  <input type="text" id="inputVal" placeholder="Enter Your Coupon Code">
                  <button class="normal" onclick="CouponApply()">Apply</button>
                </form>
                <br><br>
                <a style="padding: 8px;" class="style" id="openModalBtn">Show Coupon</a>
              </div>
            </div>
            <div id="subtotal">
              <h3>Cart Totals</h3>
              <table>
                <tr>
                  <td>Cart Subtotal</td>
                  <% if(locals.total) {%>
                    <td id="cartSubtotal">₹<%= total ? total : 0 %>
                    </td>
                    <% } else { %>
                      <td id="cartSubtotal">₹0</td>
                      <% } %>
                </tr>
                <tr>
                  <td>Shipping</td>
                  <% if(locals.total) {%>
                    <td id="shipping">
                      <%= total< 500 ? '₹40' : 'Free' %>
                    </td>
                    <% } else { %>
                      <td id="shipping">Free</td>
                      <% } %>
                </tr>
                <tr style="display: none" id="discountbox">
                  <td>Discount</td>
                  <td id="discount">-</td>
                </tr>
                <tr>
                  <td><strong>Total</strong></td>
                  <% if(locals.total) {%>
                    <td><strong id="total">₹<%= total < 500 ? total+40 : total %></strong></td>
                    <% } else { %>
                      <td><strong id="total">₹0</strong></td>
                      <% } %>
                </tr>
              </table>
              <% if(total){ %>
                <input type="hidden" name="checking" id="checking" value="<%= total %>">
                <button id="button" type="submit" class="normal">Proceed to checkout</button>
                <% } %>

            </div>
          </section>
        </form>

        <% } %>

