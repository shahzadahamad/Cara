          <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>



          <script>

            function myFunction(index) {

              const element = document.getElementById(`textToCopy${index}`);
              const modal = document.getElementById('couponModal');


              var range = document.createRange();
              range.selectNode(element);


              window.getSelection().removeAllRanges();
              window.getSelection().addRange(range);

              document.execCommand("copy");


              Swal.fire({
                icon: 'success',
                title: 'Code Copied!',
                showConfirmButton: false,
                timer: 800,
              }).then((result) => {
                modal.style.display = 'none'
              })
            }

            // modal for available coupon
            document.addEventListener('DOMContentLoaded', function () {
              const openModalBtn = document.getElementById('openModalBtn');
              const modal = document.getElementById('couponModal');
              const closeModalBtn = modal.querySelector('.close');

              openModalBtn.addEventListener('click', function () {
                modal.style.display = 'block';
              });

              closeModalBtn.addEventListener('click', function () {
                modal.style.display = 'none';
              });

              window.addEventListener('click', function (event) {
                if (event.target === modal) {
                  modal.style.display = 'none';
                }
              });
            });
            // modal for available coupon

            window.addEventListener('DOMContentLoaded', () => {
              deleteSession();
            })


            let discounts;


            async function CouponApply() {
              event.preventDefault()
              const errorMsg = document.getElementById('errorMsg');
              const discount = document.getElementById('discount');
              const discountbox = document.getElementById('discountbox');
              const total = document.getElementById('total');
              const couponCode = document.getElementById('inputVal').value;
              const responce = await axios.post('/apply-coupon', { couponCode });

              if (responce.data.msg1) {

                Swal.fire({
                  title: "Are you sure?",
                  text: "Do You Want To Remove Coupon!",
                  icon: "warning",
                  showCancelButton: true,
                  confirmButtonColor: "#3085d6",
                  cancelButtonColor: "#d33",
                  confirmButtonText: "Yes, delete it!"
                }).then(async (result) => {
                  if (result.isConfirmed) {
                    Swal.fire({
                      title: "Removed!",
                      text: "Coupon has been removed.",
                      icon: "success",
                      showConfirmButton: false,
                      timer: 1000,
                    }).then((result)=>{
                      window.location.reload()
                    })
                  }
                });

              }


              if (responce.data.msg) {
                errorMsg.innerHTML = responce.data.msg
                errorMsg.style.display = 'block'
              } else {
                errorMsg.style.display = 'none'
              }

              discounts = responce.data.status;

              if (responce.data.status) {
                discount.innerHTML = "-₹" + responce.data.status
                discountbox.style.display = 'contents'
                if (responce.data.total[0].total < 500) {
                  total.innerHTML = "₹" + Number(responce.data.total[0].total + 40 - responce.data.status);

                } else {
                  total.innerHTML = "₹" + Number(responce.data.total[0].total - responce.data.status);
                }
                errorMsg.innerHTML = 'Coupon Applied',
                  errorMsg.style.display = 'block'
                errorMsg.style.color = 'green'
                Swal.fire({
                  icon: 'success',
                  title: 'Coupen Applied!',
                  showConfirmButton: false,
                  timer: 1000,
                })
              }

            }

            async function deleteSession() {
              try {
                await axios.post('/clear-coupon');
              } catch (error) {
                console.log(error.message);
              }
            }



            function removeProduct(id, i) {
              const row = document.getElementById(`row${i}`);
              const subTotalRow = document.getElementById(`subTotal${i}`);
              const cartSubtotal = document.getElementById('cartSubtotal');
              const total = document.getElementById('total');
              const shipping = document.getElementById('shipping');
              const checkout = document.getElementById('cart-add');
              const button = document.getElementById('button');

              const pTag = document.getElementById(`pTag${i}`);




              fetch(`/remove-product?id=${id}`, {
                method: "PATCH",
                headers: {
                  'Content-Type': "application/json",
                },
                body: JSON.stringify({ id: id })
              }).then((res) => res.json())
                .then((data) => {



                  const lastOne = data.cartDelete.deletedCount;
                  row.remove();
                  if (lastOne) {
                    checkout.remove();
                  }


                  if (pTag.innerHTML && !lastOne) {
                    return
                  }

                  if (subTotalRow) {
                    const value = subTotalRow.innerHTML.replace('₹', '');



                    cartSubtotal.innerHTML = '₹' + Number(data.totalCart[0].total);




                    if (data.totalCart[0].total < 500) {
                      shipping.innerHTML = '₹' + 40;
                      if (data.totalCart[0].total === 0) {
                        shipping.innerHTML = 'Free'
                      }
                      total.innerHTML = lastOne ? '₹' + 0 : '₹' + Number(data.totalCart[0].total + 40);
                      if (discount && discounts != undefined) {
                        total.innerHTML = data.totalCart[0].total === 0 ? '₹' + 0 : '₹' + Number(data.totalCart[0].total + 40 - discounts);
                      } else {
                        total.innerHTML = data.totalCart[0].total === 0 ? '₹' + 0 : '₹' + Number(data.totalCart[0].total + 40);
                      }
                    } else {
                      shipping.innerHTML = 'Free'
                      if (discount && discounts != undefined) {
                        total.innerHTML = '₹' + Number(data.totalCart[0].total - discounts);
                      } else {
                        total.innerHTML = '₹' + Number(data.totalCart[0].total);
                      }
                    }

                  }

                  if (data.totalCart[0].total <= 0) {
                    shipping.innerHTML = 'Free';
                    total.innerHTML = '₹' + 0
                    button.style.display = 'none';
                  }

                  const totalVal = total.innerHTML.replace('₹', '');
                  if (Number(totalVal) <= 0) {
                    shipping.innerHTML = 'Free';
                    total.innerHTML = '₹' + 0
                    button.style.display = 'none';
                  }

                  const subCartTotoal = cartSubtotal.innerHTML.replace('₹', '');
                  if (Number(subCartTotoal) <= 0) {
                    shipping.innerHTML = 'Free';
                    cartSubtotal.innerHTML = '₹' + 0
                    button.style.display = 'none';
                  }


                })
                .catch((error) => console.log(error.message));
            }






            function countOfQuantity(id, price, i, stock) {
              const input = document.getElementById(`inputTag${i}`);
              const subTotalRow = document.getElementById(`subTotal${i}`);
              const cartSubtotal = document.getElementById('cartSubtotal');
              const total = document.getElementById('total');
              const shipping = document.getElementById('shipping');
              const pTag = document.getElementById(`pTag${i}`);
              const button = document.getElementById('button');

              if (input.value == 0) {
                input.value = 1;
              }

              if (Number(input.value) > Number(stock)) {
                pTag.innerHTML = `Out Of Stock.${stock} left`
              } else {
                pTag.innerHTML = '';
              }


              fetch(`/cart-detials?id=${id}&quantity=${input.value}`, {
                method: "PATCH",
                headers: {
                  "content-Type": "application/json"
                },
                body: JSON.stringify({
                  id: id,
                  quantity: input.value,
                })
              }).then((res) => res.json())
                .then((data) => {

                  subTotalRow.innerHTML = '₹' + price * input.value;
                  cartSubtotal.innerHTML = '₹' + data.totalCart[0].total;

                  if (data.totalCart[0].total < 500) {
                    shipping.innerHTML = '₹' + 40;
                    if (discount && discounts != undefined) {
                      total.innerHTML = '₹' + Number(data.totalCart[0].total + 40 - discounts)
                    } else {
                      total.innerHTML = '₹' + Number(data.totalCart[0].total + 40)
                    }
                  } else {
                    shipping.innerHTML = 'Free';
                    if (discount && discounts != undefined) {
                      total.innerHTML = '₹' + Number(data.totalCart[0].total - discounts);
                    } else {
                      total.innerHTML = '₹' + Number(data.totalCart[0].total);
                    }
                  }

                  if (data.totalCart[0].total === 0) {
                    shipping.innerHTML = 'Free';
                    total.innerHTML = '₹' + 0
                    button.remove();
                  }

                })
                .catch((error) => console.log(error.message));
            }




          </script>

