<%- include('../layouts/header.ejs') -%>

  <style>
    @import url("https://fonts.googleapis.com/css2?family=Spartan:wght@100;200;300;400;500;600;700;800;900&display=swap");

    .user--info {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .tabular--wrapper {
      background: #fff;
      margin-top: 1rem;
      border-radius: 10px;
      padding: 2rem;
    }

    .search--box {
      width: 300px;
      background: rgb(237, 237, 237);
      border-radius: 15px;
      /* color: rgba(113, 99, 186, 255); */
      color: #1abc9c;
      display: flex;
      align-items: center;
      gap: 5px;
      padding: 4px 12px;
    }

    #searchResults {
      list-style: none;
      border-radius: 10px;
    }

    #searchResults li {
      width: 100%;
      background-color: rgb(237, 237, 237);
      border: 1px solid rgb(53, 48, 48);
      padding: 10px;
    }

    #searchResults li:hover {
      background-color: #fff;
      cursor: pointer;
    }

    #searchResults li a {
      text-decoration: none;
      color: #000;
      font-weight: 600;
    }

    .search--box input {
      background-color: transparent;
      padding: 10px;
      border: 0;
      outline: 0;
      width: 16rem;
    }

    .search--box i {
      font-size: 1.2rem;
      cursor: pointer;
      transition: all 0.5s ease-out;
    }

    .search--box i:hover {
      transform: scale(1.2);
    }

    .dropdown {
      font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    }

    #wishlist {
      position: absolute;
      right: 12px;
      color: #088178;
      background-color: #cce7d0;
      padding: 8px;
      border-radius: 40px;
      transition: 0.3s ease-in-out
    }

    #wishlist:hover {
      color: #fff;
      background-color: #088178;
    }

    #offerPecen {
      position: absolute;
      top: 12px;
      left: 12px;
      margin: 0px;
      color: #388e3c;
      font-weight: 900;
      font-size: 12px;
    }
  </style>

