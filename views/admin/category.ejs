          <i class="fas fa-sign-out-alt"></i>
          <span>Logout</span>
        </a>
      </li>
    </ul>
  </div>

  <div class="main--content">
    
    <div class="header--wrapper">
      <img src="/images/logo.png" style="width: 140px; height: 40px;" alt="">
      <div class="user--info">
        <img src="/images/admin.png" alt="">
        <h4><%= admins.username %></h4>
      </div>
    </div>

    <div class="tabular--wrapper">

      <div class="d-flex flex-wrap: wrap; pb-3 justify-content-end">
        <a class="btn btn-outline-dark" href="/admin/add-category"><i class="fa-solid fa-circle-plus"></i> Add Category</a>
      </div>
      <div style="flex-wrap: wrap; justify-content: space-between; margin-bottom: 20px;" class="user--info">
        <div>
          <h3 style="font-size: 30px;" class="main--title">Category</h3>
        </div>
        <div class="search--box">
          <i class="fa-solid fa-search"></i>
          <input type="text" id="search" placeholder="Search" />
        </div>
      </div>

      <div style="overflow-x: auto;" class="table--container">
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if(category.length>0){%>
              <% for(let i=0; i< category.length;i++){ %>
            <tr id="row<%=i%>">
              <td><%= category[i].name %></td>
              <td><a class="btn btn-outline-primary" href="/admin/edit-categorys?id=<%= category[i]._id %>">Edit</a>&nbsp;&nbsp;<button class="btn btn-outline-danger" onclick=" if(confirm('Did you want to delete product <%= category[i].name %>')){deleteCategory('<%= category[i]._id %>','<%=i%>')}">Delete</button>
            </tr> 
            <% } %>
            <% } else { %>
              <tr>
                <td colspan="7">Category Not Found</td>
              </tr>
              <% } %>
          </tbody>
          <tfoot>
            <tr>
              <td id="totalCategory" colspan="8">Total Products: <%= category.length %></td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>

  </div>


  <script>
    
    function deleteCategory(id,i){
      let totalCategory = document.getElementById('totalCategory');
      const row = document.getElementById(`row${i}`);
      fetch(`/admin/delete-category?id=${id}`,{
        method: "DELETE",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ id:id })
      }).then((res) => res.json())
        .then((data) => {
          row.remove();
        })
        .catch((error) => console.log(error.message));
    };

  </script>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
