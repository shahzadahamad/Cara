    </ul>
  </div>

  <div class="main--content">

    <div class="header--wrapper">
      <img src="/images/logo.png" style="width: 140px; height: 40px;" alt="">
      <div class="user--info">
        <img src="/images/admin.png" alt="">
        <h4><%= admins.username %></h4>
      </div>
    </div>

    <section style="border-radius: 10px; height: 500px;" id="forms">
      <div id="wrapper">
        <div class="title">
          <span>Edit User</span>
        </div>
        <form action="/admin/user-detials" method="post">
          <div class="row">
            <i class="fas fa-user"></i>
            <input type="text" name="name" placeholder="Full Name" required value="<%= user.fullname %>" >
          </div>
          <div class="row">
            <i class="fas fa-user"></i>
            <input type="text" name="email" placeholder="Email" value="<%= user.email %>" required>
          </div>
          <div class="row">
            <i class="fa-solid fa-phone"></i>
            <input type="tel" name="mobile" placeholder="Phone Number" pattern="[0-9]{10}" value="<%= user.mobile %>" required>
          </div>
          <div class="row button">
            <input type="submit" value="Edit User">
          </div>
          <div class="signup-link"><a href="/admin/user-detials">Go Back</a></div>
        </form>
      </div>
    </section>

  </div>



