  <style>
    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
      -webkit-appearance: none;
    }

    .preview-container {
      display: none;
      flex-wrap: wrap;
      gap: 10px;
    }

    .preview-image {
      width: 100px;
      height: auto;
      object-fit: cover;
      margin-left: 30px;
      margin-bottom: 10px;
    }

    @media (max-width: 553) {
      .preview-container {
        justify-content: center;
      }
    }
  </style>

