  <link rel="stylesheet" href="/styleSheet/admin.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">


  <div class="sidebar">
    <br>
    <ul class="menu">
      <li>
        <a href="/admin/dashboard">
          <i class="fa-solid fa-gauge-high"></i>
          <span>Dashboard</span>
        </a>
      </li>
      <li>
        <a href="#">
          <i class="fas fa-user"></i>
          <span>Profile</span>
        </a>
      </li>
      <li>
        <a href="/admin/user-detials">
          <i class="fa-solid fa-users"></i>
          <span>Users</span>
        </a>
      </li>
      <li>
        <a href="/admin/order-detials">
          <i class="fa-solid fa-check"></i>
          <span>Order</span>
        </a>
      </li>
      <li class="active">
        <a href="/admin/products">
          <i class="fa-solid fa-cart-shopping"></i>
          <span>Products</span>
        </a>
      </li>
      <li>
        <a href="/admin/category">
          <i class="fa-solid fa-list"></i>
          <span>Category</span>
        </a>
      </li>
      <li>
        <a href="/admin/coupon">
          <i class="fa-solid fa-ticket"></i>
          <span>Coupons</span>
        </a>
      </li>
      <li>
        <a href="/admin/offer">
          <i class="fa-solid fa-percent"></i>
          <span>Offers</span>
        </a>
      </li>
      <li class="logout">
        <a href="/admin/logout">
          <i class="fas fa-sign-out-alt"></i>
          <span>Logout</span>
        </a>
      </li>
    </ul>
  </div>

  <div class="main--content">

    <div class="header--wrapper">
      <img src="/images/logo.png" style="width: 140px; height: 40px;" alt="">
      <div class="user--info">
        <img src="/images/admin.png" alt="">
        <h4>
          <%= admins.username %>
        </h4>
      </div>
    </div>

    <div class="tabular--wrapper">

      <div class="d-flex flex-wrap: wrap; pb-3 justify-content-end">
        <a class="btn btn-outline-dark" href="/admin/add-products"><i class="fa-solid fa-circle-plus"></i> Add
          Products</a>
      </div>
      <div style="flex-wrap: wrap; justify-content: space-between; margin-bottom: 20px;" class="user--info">
        <div>
          <h3 style="font-size: 30px;" class="main--title">Products</h3>
        </div>
        <div class="search--box">
          <i class="fa-solid fa-search"></i>
          <input type="text" id="search" placeholder="Search" />
        </div>
      </div>

      <div style="overflow-x: auto;" class="table--container">
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Brand</th>
              <th>Category</th>
              <th>Rating</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Image</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if(locals.product.length>0){%>
              <% for(let i=0; i< product.length;i++){ %>
                <tr id="row<%=i%>">
                  <td>
                    <%= product[i].name %>
                  </td>
                  <td>
                    <%= product[i].brand %>
                  </td>
                  <td>
                    <%= product[i].categoryId.name %>
                  </td>
                  <td>
                    <%= product[i].rating %>
                  </td>
                  <th>$<%= product[i].price %>
                  </th>
                  <td>
                    <%= product[i].quantity %>
                  </td>
                  <td><img style="width: 100px;border-radius: 10px;" src="/images/productImages/<%= product[i].image[0] %>" alt=""></td>
                  <td><a class="btn btn-outline-primary" href="/admin/edit-products?id=<%= product[i]._id %>">Edit</a>&nbsp;&nbsp;<button class="btn btn-outline-danger"onclick="if(confirm('Did you want to delete product <%= product[i].name %>')){deleteProduct('<%= product[i]._id %>','<%=i%>')}">Delete</button>
                  </td>
                </tr>
                <% } %>
                  <% } else { %>
                    <tr>
                      <td colspan="7">Products Not Found</td>
                    </tr>
                    <% } %>
          </tbody>
          <tfoot>
            <tr>
              <td colspan="8">Total Products: <%= product.length %>
              </td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>

  </div>

  <script>

    function deleteProduct(id,i) {
    const row = document.getElementById(`row${i}`)
      fetch(`/admin/delete-product?id=${id}`, {
        method: "DELETE",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ id:id })
      }).then((res) => res.json())
        .then((data) => {
        row.remove();
        })
        .catch((error)=>console.log(error.message));
    };

  </script>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>

